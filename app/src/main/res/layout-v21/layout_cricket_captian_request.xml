<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3F51B5"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#2E2E2D"

        android:layout_margin="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="@drawable/captainlayout">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10dp">
                <TextView
                    android:id="@+id/gameName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Game name"
                    android:textStyle="italic"
                    android:fontFamily="monospace"
                    android:textColor="#121111"
                    />

                <TextView
                    android:id="@+id/CaptainStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status:"
                    android:textAlignment="textEnd"
                     />


            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="5dp"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp"
            >
            <TextView
                android:id="@+id/nameOfCaptain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textSize="23dp"

                android:layout_marginHorizontal="10dp"/>




        </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="15dp"

            android:layout_marginVertical="3dp">

            <TextView
                android:id="@+id/emailOfCaptain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email"
                android:textSize="19sp" />
            <TextView
                android:id="@+id/ClassOfCaptain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class"
                android:layout_marginVertical="2dp"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:text="gender"
                android:textSize="19sp" />
            <TextView
            android:id="@+id/mobileNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:text="contact"
            android:textSize="19sp" />

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="5dp"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/acceptReqCricket"
                    android:layout_width="137dp"
                    android:layout_height="wrap_content"
                    android:text="Approve"
                    android:layout_marginHorizontal="10sp"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"

                    android:background="@drawable/btnshape"/>

                <Button
                    android:id="@+id/rejectReqCricket"
                    android:layout_width="137dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10sp"
                    android:background="@drawable/btnshape"
                    android:text="Delete"
                    android:textSize="20dp"


                    android:textColor="#FF3D00" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>
