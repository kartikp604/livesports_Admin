<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".KabaddiRulesActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rules:Kabaddi"
            android:textSize="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginHorizontal="15dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            >

            <EditText
                android:id="@+id/editText_Kabaddi_rulesGameManager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="0dp"
                android:hint="Game Manager Name"
                android:inputType="text" />

            <EditText
                android:id="@+id/editText_Kabaddi_rulesGameManagerMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:hint="Manager Contact"
                android:inputType="number"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:id="@+id/pdfnameKabaddiball"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="No file is selected:" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left">

                <Button
                    android:id="@+id/selectFileKabaddiRules"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SELECT FILE" />

                <Button
                    android:id="@+id/pdfUploadKabaddi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UPLOAD" />
            </LinearLayout>


        <ScrollView
            android:layout_width="384dp"
            android:layout_height="277dp"
            android:layout_marginTop="20dp">


            <EditText
                android:id="@+id/editText_kabaddi_rules"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="start|top"
                android:hint="kabaddi"
                android:inputType="textMultiLine" />
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button
                android:id="@+id/btn_kabaddi_update_rules"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:text="Update Info"
                android:textSize="20dp"
                />
<!--            <Button-->
<!--                android:id="@+id/btn_kabaddi_show_rules"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_marginHorizontal="10dp"-->
<!--                android:text="Show Rules"-->
<!--                android:textSize="20dp"-->
<!--                />-->
        </LinearLayout>

    </LinearLayout>




</LinearLayout>
</LinearLayout>