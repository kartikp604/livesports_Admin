<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4EB6FB"
    tools:context=".ScorerMainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|center"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="Team1"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:text="V/S"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="Team2"
                android:textSize="20dp" />
        </LinearLayout>

        <Spinner
            android:id="@+id/spin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team1"
                android:textSize="15dp"/>
            <EditText
                android:id="@+id/team1id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:textSize="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team2"
                android:textSize="15dp"/>
            <EditText
                android:id="@+id/team2id"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextRuns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Runs"
                android:layout_marginRight="50dp"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/EditRuns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add runs"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextWicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Wicket"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/EditWicket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add wicket"
                android:textSize="15dp"
                android:layout_marginLeft="40dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextOver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Over"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/EditOver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add Over"
                android:layout_marginLeft="55dp"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Run Rate"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/runrate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/radiogroup">

                <RadioButton
                    android:id="@+id/btman1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:hint="Batsman1"
                    android:textSize="15dp" />

                <RadioButton
                    android:id="@+id/btman2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:hint="Batsman2"
                    android:textSize="15dp" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batsman1 runs"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/bt1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batsman2 runs"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/bt2"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/overrun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="overrun"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="0"
                android:layout_marginLeft="15dp"
                android:onClick="zerorun"
                android:textColor="#FFFFFF"
                android:background="@drawable/btnrun"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="1"
                android:onClick="onerun"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="3dp"
                android:background="@drawable/btnrun"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="2"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="3dp"
                android:background="@drawable/btnrun"
                android:onClick="tworun"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="3"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="3dp"
                android:background="@drawable/btnrun"
                android:onClick="threerun"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="4"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="3dp"
                android:background="@drawable/run4"
                android:onClick="fourrun"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/run4"
                android:text="6"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="3dp"
                android:onClick="sixrun"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Wide Ball"
                android:id="@+id/wdball"
                android:onClick="wideball"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button"
                android:layout_gravity="left" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="No Ball"
                android:id="@+id/nbball"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button"
                android:layout_gravity="left"
                android:layout_marginRight="15dp"
                android:onClick="noball"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp" >

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="Wicket"
                android:id="@+id/wicket"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:background="@drawable/wicket"
                android:onClick="Wicket"
                android:layout_gravity="right" />

<!--            <Button-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_weight="1"-->
<!--                android:layout_marginRight="15dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textColor="#FFFFFF"-->
<!--                android:background="@drawable/button"-->
<!--                android:layout_marginLeft="15dp"-->
<!--                android:text="LBW"-->
<!--                android:id="@+id/lbw" />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btman"
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Change Batman"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button"
                android:layout_gravity="right" />

            <Button
                android:id="@+id/bowler"
                android:layout_width="0dp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Change Bowler"
                android:layout_marginRight="15dp"
                android:layout_gravity="right" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/report_Cricket"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="report update"/>
<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textSize="15dp"-->
<!--                android:text="Winner"-->
<!--                android:layout_marginLeft="15dp"/>-->
<!--            <EditText-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textSize="15dp"-->
<!--                android:layout_marginLeft="30dp"-->
<!--                android:id="@+id/winnerTeam"/>-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:background="@drawable/button"
                android:layout_marginLeft="15dp"
                android:text="Runrate"
                android:id="@+id/btnrunrate"
                android:onClick="runrate"/>

            <Button
                android:id="@+id/btnupdate"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:textColor="#FFFFFF"
                android:background="@drawable/button"
                android:layout_height="wrap_content"
                android:text="UPDATE" />
            <Button
                android:id="@+id/btnReset"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:background="@drawable/button"
                android:text="RESET" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>